<Page x:Class="Книжный_магазин_32В_Каширина.Books"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Книжный_магазин_32В_Каширина"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Books">

    <Grid>
        <DataGrid Name="DBBooks" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <MediaElement   Width="50" Height="50"Initialized="MadiaElemet_Initialized"/>


                                <StackPanel Orientation="Vertical">
                                    <TextBlock/>
                                </StackPanel>
                            </StackPanel>
                        </DataTemplate>  
                    </DataGridTemplateColumn.CellTemplate>
                
                
                </DataGridTemplateColumn>
            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Page>
